DROP USER 'promotvogt'@'%' ;

CREATE USER 'promotvogt'@'%' IDENTIFIED BY 'anciensvogtois';
GRANT USAGE ON *.* TO 'promotvogt'@'%' REQUIRE NONE WITH MAX_QUERIES_PER_HOUR 0 MAX_CONNECTIONS_PER_HOUR 0 MAX_UPDATES_PER_HOUR 0 MAX_USER_CONNECTIONS 0;CREATE DATABASE IF NOT EXISTS `promotvogt`;
GRANT ALL PRIVILEGES ON `promotvogt`.* TO 'promotvogt'@'%';